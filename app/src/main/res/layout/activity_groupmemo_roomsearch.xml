<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"

    android:orientation="vertical"
    android:background="#7ba5a5aa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#FFFFFF"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/btn_roomsearch_exit"
            android:textSize="15dp"
            android:layout_alignTop="@+id/btn_Write_send"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/back"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:scaleType="fitStart"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입장"
            android:textSize="15dp"
            android:id="@+id/btn_roomsearch_ok"
            android:background="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FF9800"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방 검색"
            android:id="@+id/roomsearch_title"
            android:gravity="center_vertical|center|center_horizontal"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:gravity="center"
        android:background="#FFFFFF">

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF" >

        <EditText
            android:id="@+id/edittext_roomsearch_name"
            android:inputType="text"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:gravity="left"
            android:background="@drawable/rounded_edittext_white"
            android:hint="방 검색"
            android:textSize="15dp"
            android:paddingLeft="15dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:gravity="center"
        android:background="#FFFFFF">

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:layout_weight="2.5"
        android:id="@+id/cardviewlayout">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_roomsearch"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" /></RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
