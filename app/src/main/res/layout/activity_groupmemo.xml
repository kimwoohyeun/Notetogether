<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.y.notetogether.MainActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_main_mode"
            android:layout_weight="1"
            android:background="@drawable/group_orange"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_main_home"
            android:layout_weight="1"
            android:background="@drawable/memohome_orange"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_main_mode"
            android:layout_toEndOf="@+id/btn_main_mode"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_main_new"
            android:layout_weight="1"
            android:background="@drawable/new_gray"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_main_home"
            android:layout_toEndOf="@+id/btn_main_home"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_main_edit"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:padding="0dp"
            android:background="@drawable/search_gray"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_main_new"
            android:layout_toEndOf="@+id/btn_main_new"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_main_setting"
            android:layout_weight="1"
            android:background="@drawable/setting_gray"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_main_edit"
            android:layout_toEndOf="@+id/btn_main_edit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/serchview_main"
        android:layout_gravity="center">

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:hint="  메모 검색"
            android:textStyle="bold"
            android:ems="10"

            android:id="@+id/textView_main_serch"
            android:layout_weight="9"
            android:textSize="12dp"
            android:textColorHint="#A3A3A3"
            android:background="@drawable/rounded_edittext"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView3"
            android:src="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/cardview_main">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycleView_memo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/settinginflate_main"
        android:visibility="gone"
        android:layout_weight="4"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/GroupRoom_main">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="방 생성"
            android:id="@+id/btn_gruop_room"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="방 검색"
            android:id="@+id/btn_group_roomsearch"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>